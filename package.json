		"express": "^4.17.1",
		"mongoose": "^5.6.5",
		"node-sass": "^4.12.0",
		"node-sass-chokidar": "^1.3.5",
		"nodemon": "^1.19.1",
		"npm-run-all": "^4.1.5",
		"postcss-cli": "^6.1.3",
		"pug": "^2.0.4"
	}
