	"main": "server.js",
	"scripts": {
		"build-task:scss-compile": "node-sass-chokidar --source-map true static/scss/index.scss -o static/css",
		"build-task:autoprefixer": "postcss static/css/*.css --use autoprefixer -d static/css",
		"sass:build": "npm-run-all -p build-task:*",
		"sass:watch": "chokidar 'static/scss/*.scss' -c 'npm run sass:build'",
		"dev:build": "npm-run-all -p sass:*",
		"dev:watch": "nodemon server",
		"server": "npm-run-all -p dev:*"
	},
